<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qidizi.netSniffer">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <permission
        android:name="com.qidizi.netSniffer.contentprovider.READ_DATA"
        android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NetworkSettingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.qidizi.netSniffer.MainActivity" />
        </activity>

        <service android:name=".KcaDataService" />
        <service
            android:name=".KcaVpnService"
            android:label="@string/app_vpn_name"
            android:permission="android.permission.BIND_VPN_SERVICE">
            <intent-filter>
                <action android:name="android.net.VpnService" />
            </intent-filter>
        </service>

        <receiver
            android:name=".KcaSnifferWidget"
            android:label="Sniffer Switch">
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_config" />

            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.antest1.kcasniffer.widget.ACTION_SET" />
                <action android:name="com.antest1.kcasniffer.widget.ACTION_TOGGLE" />
            </intent-filter>
        </receiver>

        <provider
            android:name=".KcaContentProvider"
            android:authorities="com.qidizi.netSniffer.contentprovider"
            android:exported="true"
            android:grantUriPermissions="true"
            android:readPermission="com.qidizi.netSniffer.contentprovider.READ_DATA" />
    </application>

</manifest>